        "scopes": [
            "https://www.googleapis.com/auth/drive"
        ]
    },
	  
	"permissions": ["tabs", "activeTab", "identity", "notifications", "http://localhost:9000/*", "http://quiet-anchorage-6418.herokuapp.com/*"]
}
