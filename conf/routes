# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index()
GET         /login               controllers.Application.login(email:String, password:String)
GET         /logout              controllers.Application.logout()

POST        /add                 controllers.Web.add()
# url:String, tags:String, title:String, faviconurl:String, usertags:String
GET         /analysis            controllers.Web.analyze(url:String)

GET         /get                 controllers.Web.get()
GET         /users               controllers.System.users()
GET         /query               controllers.System.query(text:String)

GET         /delete              controllers.System.delete()

GET         /domains              controllers.DomainController.getApproved()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)

    