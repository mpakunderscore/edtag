# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index
POST        /auth                controllers.Application.auth


GET         /courses             controllers.Application.courses
GET         /sources             controllers.Application.sources

GET         /personal            controllers.Application.personal
GET         /about               controllers.Application.about


GET         /add                 controllers.API.add(url: String)
GET         /domains             controllers.API.getApprovedDomains

GET         /alldomains          controllers.Web.domains
GET         /pages               controllers.Web.pages

GET         /course/list         controllers.Web.courses()
GET         /course/save         controllers.Web.saveCourse(title: String, webDataIds: String)
GET         /course/update       controllers.Web.updateCourse(id: Integer, title: String, webDataIds: String)


GET         /query               controllers.System.query(text: String)
GET         /delete              controllers.System.delete
#GET         /test                  controllers.System.test

GET         /show/*id            controllers.Link.show(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)
