# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.index
# POST        /login               controllers.Application.login

#GET         /login               controllers.Application.login(email:String, password:String)
#GET         /logout              controllers.Application.logout()


GET        /add                 controllers.API.add(url:String)

GET        /domains             controllers.API.getApprovedDomains
GET        /alldomains          controllers.Web.domains

GET        /pages               controllers.Web.pages

GET        /users               controllers.System.users
GET        /query               controllers.System.query(text:String)
GET        /delete              controllers.System.delete


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)

