# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Web.courses
POST        /auth                controllers.Application.auth


GET         /courses             controllers.Web.courses
GET         /sources             controllers.Web.sources

GET         /personalization     controllers.Web.personalization
GET         /contact             controllers.Web.contact


GET         /add                 controllers.API.add(url: String)
GET         /domains             controllers.API.getApprovedDomains

GET         /alldomains          controllers.Web.domains
GET         /pages               controllers.Web.pages


GET         /query               controllers.System.query(text: String)
GET         /delete              controllers.System.delete
#GET         /test                  controllers.System.test

GET         /show/*id            controllers.Link.show(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)
