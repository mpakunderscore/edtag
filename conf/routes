# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.index()
GET        /login               controllers.Application.login(email:String, password:String)
GET        /logout              controllers.Application.logout()

POST       /add                 controllers.Application.add(url:String, tags:String, title:String, faviconurl:String, usertags:String)
GET        /analysis            controllers.Application.analysis(url:String)

GET        /get                 controllers.Application.get()
GET        /users               controllers.Application.users()
GET        /query               controllers.Application.query(text:String)

GET        /delete               controllers.Application.delete()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)

    