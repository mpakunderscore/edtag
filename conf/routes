# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                          controllers.Application.index
GET         /login                     controllers.Application.login


GET         /bundles                   controllers.Application.bundles
GET         /links                     controllers.Application.links
GET         /about                     controllers.Application.about

GET         /signin                    controllers.Application.signIn
GET         /signout                   controllers.Application.signOut

GET         /add                       controllers.API.add(url: String)
GET         /domains                   controllers.API.getApprovedDomains


GET         /analyze/page/links        controllers.API.getLinksFromUrl(url: String)


GET         /bundle/add                controllers.Web.addBundle(urls: String, title: String, description: String)
POST        /bundle/edit/*id           controllers.Web.editBundle(id: Integer, urls: String, title: String, description: String)

GET         /bundle/generation         controllers.Application.bundleGeneration



GET         /bundles/list              controllers.Web.bundles
GET         /links/list                controllers.Web.links


GET         /bundle/*id                controllers.Bundle.show(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file              controllers.Assets.at(path="/public", file)
