# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index

#GET         /login               controllers.Application.login(email:String, password:String)
#GET         /logout              controllers.Application.logout()


# GET        /add                  controllers.Web.add(url:String)
POST        /add                 controllers.API.add

GET         /domains             controllers.API.getApproved

GET         /pages               controllers.Web.pages

GET         /users               controllers.System.users
GET         /query               controllers.System.query(text:String)
GET         /delete              controllers.System.delete


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)

